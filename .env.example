# ==============================================================================
# ALPHAFLOW TRADING PLATFORM - ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env and fill in your actual credentials
# Never commit .env to version control!

# ==============================================================================
# ALPACA MARKETS API CREDENTIALS (Required)
# ==============================================================================
# Sign up at https://alpaca.markets
# Paper trading credentials are free and safe for testing

ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# ==============================================================================
# NEWS API (Optional)
# ==============================================================================
# Used for sentiment analysis
# Sign up at https://newsapi.org

NEWS_API_KEY=your_newsapi_key_here

# ==============================================================================
# TWITTER API (Optional)
# ==============================================================================
# Used for social sentiment analysis
# Sign up at https://developer.twitter.com

TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here

# ==============================================================================
# TRADING CONFIGURATION (Optional)
# ==============================================================================
# Override default trading parameters

# Trading mode: live, paper, backtest, analysis
TRADING_MODE=paper

# Initial capital for backtesting
INITIAL_CAPITAL=100000

# Risk parameters
MAX_POSITION_SIZE=0.10
MAX_DAILY_LOSS=0.02
MAX_DRAWDOWN=0.15

# ==============================================================================
# LOGGING CONFIGURATION (Optional)
# ==============================================================================

LOG_LEVEL=INFO
LOG_TO_FILE=true
